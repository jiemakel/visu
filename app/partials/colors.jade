script(type="text/ng-template",id="templates/colors.html")
  button.btn.btn-default(type='button', ng-model='colorScale', ng-change='setScale()', ng-options='scale.type for scale in scales', bs-select='')
    | Action
    span.caret
  .colors-table
    div(ng-show='colors.length')
      input.search-color.form-control.input-sm(ng-model='searchColor', type='text', placeholder='Search...')
      i.fa.fa-times-circle.search-clear(data-ng-show='searchColor', ng-click="searchColor=''")
    table.table.table-striped
      tbody
        tr(ng-repeat="color in colors | filter:{'key':searchColor} track by $index")
          td
            p.light.small.sample-name {{color.key}}
          td.sample
            input.sample-color.form-control(type='text', colorpicker='hex', data-color='#ff0', data-ng-style="{'background-color' : color.value, 'color' : foreground(color.value)}", ng-model='color.value', ng-change='setColor(color.key,color.value)')
            .clearfix
